{
  "name": "brainac-backend",
  "version": "1.0.0",
  "description": "Backend API for Brainac educational platform",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "migrate": "tsx src/scripts/migrate-users.ts",
    "populate-subjects": "tsx src/scripts/populate-subjects.ts"
  },
  "keywords": ["education", "api", "firebase", "razorpay"],
  "author": "Brainac Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.4.5",
    "firebase-admin": "^12.0.0",
    "razorpay": "^2.9.4",
    "joi": "^17.12.2",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "mongoose": "^8.2.1",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.30",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/compression": "^1.7.5",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "typescript": "^5.4.3",
    "tsx": "^4.7.1",
    "tsc-alias": "^1.8.8",
    "rimraf": "^5.0.5",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12"
  }
}