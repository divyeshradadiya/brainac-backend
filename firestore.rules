rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user documents
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Users can read their own payment records
    match /payments/{paymentId} {
      allow read: if request.auth != null &&
        resource.data.userId == request.auth.uid;
      allow write: if false; // Only backend can create payments
    }

    // Users can read their own subscription history
    match /subscriptionHistory/{historyId} {
      allow read: if request.auth != null &&
        resource.data.userId == request.auth.uid;
      allow write: if false; // Only backend can create history records
    }

    // Allow backend service account full access (for admin operations)
    match /{document=**} {
      allow read, write: if request.auth != null &&
        request.auth.token.firebase.sign_in_provider == 'admin';
    }
  }
}